<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<%= link_to 'New Brand', new_brand_path, class: 'btn btn-xl btn-success float-right' %>
<table>
  <thead>
    <tr>
      <th>Image url</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= image_tag brand.image_url, height: '50px' %></td>
        <td><%= brand.name %></td>
        <td><%= brand.description %></td>
        <td><%= link_to 'Show', brand %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
