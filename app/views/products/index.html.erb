<p id="notice"><%= notice %></p>

<h1>Products Administration</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th>Active</th>
      <th>On sale</th>
      <th>Stock</th>
      <th>Discount Percentage</th>
      <th>Brand</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class=" <%= stock_on_row(product) %> ">
        <td><%= product.name %><br><%= raw product_on_sale?(product) %></td>
        <td><%= product.description %></td>
        <td><%#= product.image_url %> <%= image_tag product.image_url, height: '50px' %> </td>
        <td><%= product.price %></td>
        <td><%= raw iconify_active(product.active) %></td>
        <td><%= product.on_sale %></td>
        <td><%= product.stock %></td>
        <td><%= product.discount_percentage %></td>
        <td><%= product.brand.name %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

